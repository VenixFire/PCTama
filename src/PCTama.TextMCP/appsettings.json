{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PCTama.TextMCP.Services.TextStreamService": "Debug"
    }
  },
  "AllowedHosts": "*",
  "TextMcpConfiguration": {
    "Source": "AudioTranscription",
    "TranscriptionFilePath": "/tmp/AudioTranscription.srt",
    "FileFormat": "srt",
    "StreamingEnabled": true,
    "BufferSize": 4096,
    "FilePollingIntervalMs": 100,
    "StaleDataThresholdSeconds": 30,
    "AdditionalSources": []
  }
}
